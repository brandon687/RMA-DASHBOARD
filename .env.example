# ================================================
# SCAL MOBILE RMA PLATFORM - ENVIRONMENT VARIABLES
# ================================================
# Copy this file to .env and fill in your actual values

# ================================================
# SERVER CONFIGURATION
# ================================================
PORT=3000
NODE_ENV=development

# ================================================
# SUPABASE/POSTGRESQL DATABASE (REQUIRED)
# ================================================
# Get this from: Supabase Dashboard → Settings → Database → Connection String (URI format)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# Example (replace with your actual values):
# DATABASE_URL=postgresql://postgres:Kx7mQ9pL2nR4tY8@db.abcdefghijklm.supabase.co:5432/postgres

# ================================================
# AUTHENTICATION (REQUIRED)
# ================================================
# Generate a secure random string (min 32 characters)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_MIN_32_CHARACTERS

# Admin email for notifications
ADMIN_EMAIL=admin@scalmob.com

# ================================================
# GOOGLE SERVICES (OPTIONAL - for Phase 1)
# ================================================
# Google Sheet ID (from URL: https://docs.google.com/spreadsheets/d/SHEET_ID_HERE/edit)
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Path to service account credentials JSON file
GOOGLE_CREDENTIALS_PATH=./google-credentials.json

# Google Drive folder ID (from URL: https://drive.google.com/drive/folders/FOLDER_ID_HERE)
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here

# ================================================
# SNOWFLAKE (REQUIRED for Phase 2)
# ================================================
# Snowflake account identifier (get from: https://app.snowflake.com/)
SNOWFLAKE_ACCOUNT=your_account_identifier

# Snowflake user with write permissions
SNOWFLAKE_USER=rma_service

# Snowflake password
SNOWFLAKE_PASSWORD=your_secure_password

# Database name (from SNOWFLAKE-SCHEMA.sql)
SNOWFLAKE_DATABASE=SCAL_RMA_DB

# Warehouse name
SNOWFLAKE_WAREHOUSE=RMA_INGESTION_WH

# Role name
SNOWFLAKE_ROLE=RMA_ADMIN

# ================================================
# EMAIL NOTIFICATIONS (OPTIONAL)
# ================================================
# SMTP server for email notifications
EMAIL_SERVICE=smtp.gmail.com
EMAIL_USER=rma@scalmob.com
EMAIL_PASS=your-email-password

# ================================================
# FILE UPLOAD SETTINGS
# ================================================
# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://scalmob.com,https://tuveinc.com,http://localhost:3000

# ================================================
# SECURITY SETTINGS
# ================================================
# Session secret for admin sessions
SESSION_SECRET=another-random-secret-key-change-this

# Enable/disable admin authentication (set to true in production)
ENABLE_AUTH=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================================
# DEVELOPMENT SETTINGS (Optional)
# ================================================
# Enable debug logging
DEBUG=false

# Enable SQL query logging
LOG_SQL_QUERIES=false

# ================================================
# NOTES:
# ================================================
# 1. NEVER commit this file to git with real values
# 2. This file is in .gitignore by default
# 3. Required fields are marked as (REQUIRED)
# 4. Generate JWT_SECRET with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 5. See QUICK_START.md for step-by-step setup instructions
# 6. See SUPABASE_SETUP.md for detailed Supabase configuration
